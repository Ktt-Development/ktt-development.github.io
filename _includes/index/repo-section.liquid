<div class="my-4">
    <h1 id="{{ include.id }}" class="text-center">{{ include.name }}</h1>
</div>

<div class="m-0 row">
    {% for r in site.data.repo %}
        {% assign link = r[0] | prepend: '/repo/' %}
        {% assign repo = r[1] %}
        {% if repo.type == include.type %}
            {% include index/repo-card.liquid 
                name = repo.name
                content = repo.content
                link = link
            %}
        {% endif %}
    {% endfor %}
</div>