{% comment %}
@param name : navigation name
@param link : navigation link
@param links : navigation sublinks 
  > @param name : navigation name
    @param link : navigation link
{% endcomment %}
<li class="nav-item{% if include.links %} dropdown{% endif %}">
    <a class="nav-link{% if include.links %} dropdown-toggle{% endif %}"{% if include.links %} data-toggle="dropdown"{% endif %}>
        {{ include.name }}
    </a>
    {% if include.links %}
        <div 
            class="dropdown-menu shadow-sm"
            style="
                border: 4px solid #3278be; 
                border-radius: 0px 0px .25rem .25rem; 
                border-left: 0px; border-right: 0px; border-bottom: 0px;">

            <a class="dropdown-item" href="{{ include.link }}">{{ include.name }}</a>

            <div class="dropdown-divider"></div>

            {% for entry in include.links %}
                <a class="dropdown-item" href="{{ entry.link }}">{{ entry.name }}</a>
            {% endfor %}
        </div>
    {% endif %}
</li>